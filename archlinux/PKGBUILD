# See http://wiki.archlinux.org/index.php/Python_Package_Guidelines for more
# information on Python packaging.

# Maintainer: Christoph Stahl <christoph.stahl@uni-dortmund.de> 
pkgname=mkspellbook-git
pkgver=20130304
pkgrel=1
pkgdesc="A CLI tool that let's you create and organize Spellbooks for D20 based systems"
arch=(any)
url="https://github.com/christofsteel"
license=('WTFPL')
depends=('python' 'python-sqlalchemy' 'python-pyquery' 'latex-pgfornament' 'sqlite')
options=(!emptydirs)
source=()
md5sums=()

_gitroot=https://github.com/christofsteel/mkSpellBook.git
_gitname=mkspellbook

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [[ -d "$_gitname" ]]; then
    cd "$_gitname" && git pull origin
    msg "The local files are updated."
  else
    git clone "$_gitroot" "$_gitname"
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
}

package() {
  cd "$srcdir/$_gitname-build"
  python setup.py install --root="$pkgdir/" --optimize=1
}

# vim:set ts=2 sw=2 et:
